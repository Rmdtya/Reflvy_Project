<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg_nilai"
    android:layout_gravity="center"
    tools:context=".fragment.DragonStatusFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/roadmap_bgofflinekoin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ver1"
        app:layout_constraintEnd_toEndOf="@id/ver2"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offline Activity"
                android:fontFamily="@font/jost"
                android:textSize="20sp"
                style="@style/fontcolor2"
                android:gravity="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/roadmap_iconcoin"/>

                <TextView
                    android:id="@+id/text_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="+62k"
                    style="@style/fontcolor1"
                    android:textStyle="bold"
                    android:fontFamily="@font/jost"
                    android:layout_marginStart="5dp"
                    android:textSize="22dp"
                    android:gravity="center_vertical|start"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/roundedredbutton"
                android:textColorLink="#000000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAllCaps="false">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Close"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jost"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg_nilai"
    android:layout_gravity="center"
    tools:context=".fragment.EfekStatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_nilai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/roundedredbutton"
                android:textColorLink="#000000"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="9dp"
                android:src="@drawable/icon_close"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Your Status"
                android:textSize="23sp"
                style="@style/fontcolor2"
                android:fontFamily="@font/jost"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconlapar"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Hunger     : "/>

                    <TextView
                        android:id="@+id/text_lapar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconpengetahuan"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Intelektual  : "/>

                    <TextView
                        android:id="@+id/text_pengetahuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_kesehatanfisik"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="strength     : "/>

                    <TextView
                        android:id="@+id/text_kesehatanfisik"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_mentalhealt"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Mental Health  : "/>

                    <TextView
                        android:id="@+id/text_kesehatanmental"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconcinta"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Rasa Cinta  : "/>

                    <TextView
                        android:id="@+id/text_cinta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconhiburan"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Stress        : "/>

                    <TextView
                        android:id="@+id/text_stress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconistirahat"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Rest Point   : "/>

                    <TextView
                        android:id="@+id/text_istirahat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconsosial"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Sosial Point  : "/>

                    <TextView
                        android:id="@+id/text_sosial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Efek continuos Status : "/>

                    <TextView
                        android:id="@+id/text_efekcontinuos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Efek Status Negatif: "/>

                    <TextView
                        android:id="@+id/text_efeknegatif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="..."/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
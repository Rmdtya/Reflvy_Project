<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg_nilai"
    android:layout_gravity="center"
    tools:context=".fragment.StatusGameDragon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_nilai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/roundedredbutton"
                android:textColorLink="#000000"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="9dp"
                android:src="@drawable/icon_close"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Your Status"
                android:textSize="23sp"
                style="@style/fontcolor2"
                android:fontFamily="@font/jost"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconlapar"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Hunger"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_lapar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="10"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconpengetahuan"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Intellectual"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_pengetahuan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="20"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_kesehatanfisik"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Physical Health"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_kesehatanfisik"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="30"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_mentalhealt"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Mental Health"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_kesehatanmental"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconcinta"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Feeling"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_cinta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="70"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconhiburan"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Stress"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_hiburan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="90"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconistirahat"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Rest Point"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_istirahat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="100"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/gamestatus_iconsosial"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:textSize="12sp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/jost"
                        style="@style/fontcolor2"
                        android:text="Social Point"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/bar_sosial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="#18B167"
                            android:progressBackgroundTint="#DEE1E2"
                            android:progressBackgroundTintMode="src_over"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/custom_progressbar" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
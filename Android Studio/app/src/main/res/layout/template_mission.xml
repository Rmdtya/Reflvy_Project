<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/mission_templatebg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:gravity="center"
                    android:text="Ekspedisi Pertama"
                    android:fontFamily="@font/jost"
                    android:textColor="@color/mission_fontcolor1"
                    android:background="@drawable/mission_templatetextbg"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/text_deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:gravity="start|center_vertical"
                    android:maxLines="2"
                    android:paddingEnd="15dp"
                    android:text="Misi pertama kamu di Reflvy, Selesaikan dan dapatkan manfaatnya"
                    android:fontFamily="@font/jost"
                    style="@style/fontcolor2"
                    android:textSize="11sp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/mission_templateimagebg">

                <ImageView
                    android:id="@+id/image_icon"
                    android:padding="24dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dailyicon_lainnya"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:paddingLeft="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/bar_progres"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:max="3"
                    android:progress="2"
                    android:progressTint="#18B167"
                    android:progressBackgroundTint="#FFFFFF"
                    android:progressBackgroundTintMode="src_over"/>

                <!-- View dengan Stroke -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_progressbar" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/template_star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_weight="0.3">


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


</LinearLayout>
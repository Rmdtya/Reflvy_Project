<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.3"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Knowledge of Tech Part 1"
        android:fontFamily="@font/jost"
        android:textSize="19sp"
        android:maxLines="1"
        android:layout_marginTop="7dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        style="@style/fontcolor2"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/card1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card_bg1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:paddingBottom="35dp"
                    android:src="@drawable/card_img1"/>

                <FrameLayout
                    android:id="@+id/frame_card1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_frame1"/>

                <TextView
                    android:id="@+id/title_card1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="2"
                    android:layout_weight="0.3"
                    android:text="Hasrat Seksual"
                    style="@style/fontcolor1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/jost"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card_bg1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:paddingBottom="35dp"
                    android:src="@drawable/card_img1"/>

                <FrameLayout
                    android:id="@+id/frame_card2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_frame1"/>

                <TextView
                    android:id="@+id/title_card2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="2"
                    android:layout_weight="0.3"
                    android:text="Hasrat Seksual"
                    style="@style/fontcolor1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/jost"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_bg1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:paddingBottom="35dp"
                android:src="@drawable/card_img1"/>

            <FrameLayout
                android:id="@+id/frame_card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_frame1"/>

            <TextView
                android:id="@+id/title_card3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLines="2"
                android:layout_weight="0.3"
                android:text="Hasrat Seksual"
                style="@style/fontcolor1"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/jost"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card_bg1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_card4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:paddingBottom="35dp"
                    android:src="@drawable/card_img1"/>

                <FrameLayout
                    android:id="@+id/frame_card4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_frame1"/>

                <TextView
                    android:id="@+id/title_card4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:maxLines="2"
                    android:layout_weight="0.3"
                    android:text="Hasrat Seksual"
                    style="@style/fontcolor1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/jost"
                    android:textSize="12sp"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/bg_nilai"
    android:layout_gravity="center"
    tools:context=".fragment.TingkatKecanduanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/notifgb1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="60dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/roundedredbutton"
            android:textColorLink="#000000"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="9dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_close"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nilai Skor"
            android:fontFamily="@font/jost"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            style="@style/fontcolor2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0 - 25"
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:gravity="center"
                    style="@style/fontcolor2"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kamu normal, keren!"
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_marginStart="5sp"
                    android:gravity="center_vertical"
                    style="@style/fontcolor2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="26 - 49"
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:gravity="center"
                    style="@style/fontcolor2"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="kamu mulai kecanduan loh:("
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_marginStart="5sp"
                    android:gravity="center_vertical"
                    style="@style/fontcolor2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50 - 69"
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:gravity="center"
                    style="@style/fontcolor2"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kamu Terdeteksi Kecanduann nih:("
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_marginStart="5sp"
                    android:gravity="center_vertical"
                    style="@style/fontcolor2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:layout_marginEnd="10dp"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="70 - 100"
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:gravity="center"
                    style="@style/fontcolor2"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/menubg2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Kecanduanmu sudah tinggi, nih:("
                    android:fontFamily="@font/jost"
                    android:textSize="16dp"
                    android:padding="8dp"
                    android:layout_marginStart="5sp"
                    android:gravity="center_vertical"
                    style="@style/fontcolor2"/>

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
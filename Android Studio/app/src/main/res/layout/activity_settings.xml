<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/mainscreen"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/header_menu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/mission_headerbg1"
        android:backgroundTint="@color/colorShape"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jost"
                    android:text="Ramaditya Firdaus"
                    android:textSize="17sp"
                    android:gravity="start"
                    android:textStyle="bold"
                    style="@style/fontcolor1"/>

                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jost"
                    android:text="ramadityafirdaus@gmail.com"
                    android:textSize="14sp"
                    android:gravity="start"
                    style="@style/fontcolor1"/>

                <TextView
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jost"
                    android:layout_marginTop="20dp"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:gravity="start"
                    style="@style/fontcolor1"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:padding="5dp"
                    android:src="@drawable/setting_shapeiconwomen"/>
                
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_menu"
        app:layout_constraintBottom_toBottomOf="@id/horizontalbottom">

        <androidx.core.widget.NestedScrollView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Pengaturan Umum"
                    android:layout_marginTop="10dp"
                    style="@style/fontcolor2"
                    android:fontFamily="@font/jost"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>
                    
                    <TextView
                        android:id="@+id/text_pengaturan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Pengaturan Umum"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_pengaturan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>
                    
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/colorShape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_bantuan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Bantuan"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_bantuan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:text="Pengawasan"
                    style="@style/fontcolor2"
                    android:fontFamily="@font/jost"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_statistik"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Stastic Penggunaan"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_statistik"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/colorShape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_pengawasan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Pengawasan Orang Tua"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_pengawasan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:text="Tentang Kami"
                    style="@style/fontcolor2"
                    android:fontFamily="@font/jost"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_tentangkami"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Tentang Kami"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_tentangkami"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_hubungikami"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Hubungi Kami"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_hubungikami"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_kebijakan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="56dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Kebijakan dan Privasi"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_kebijakan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/menubg4"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/text_syarat"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="60dp"
                        android:textStyle="normal"
                        style="@style/fontcolor2"
                        android:layout_marginStart="15dp"
                        android:text="Syarat dan Ketentuan"
                        android:fontFamily="@font/jost"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/icon_syarat"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/back_icon"
                        android:rotation="180"
                        android:padding="7dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="22dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/colorShape"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalglstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalglend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontaltop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp"/>


    <include
        android:id="@+id/footer"
        layout="@layout/footer_style1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/info_img1" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/martel"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Coba 5 Cara ini Agar Bisa Hidup Sehat Teratur Bagi Kalian Yang"
        android:textAlignment="textStart"
        style="@style/fontcolor2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/deskripsi"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeStepGranularity="8dp"
        android:autoSizeTextType="uniform"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:fontFamily="@font/martel"
        android:gravity="center_vertical"
        android:maxLines="4"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut sed porta arcu. Aenean non risus vel ante tempus pellentesque. Curabitur mattis erat enim. Pellentesque non non risus Of The Ragon In The site On The afterinster .."
        style="@style/fontcolor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/card_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
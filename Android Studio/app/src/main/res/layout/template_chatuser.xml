<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/answer_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/martel"
                android:background="@drawable/roundedchatuser_bg"
                android:padding="8dp"
                android:layout_gravity="end"
                android:textAlignment="textStart"
                style="@style/fontcolor1"
                android:layout_weight="1"
                android:text="Baik, Mari Mulai Sekarang"
                android:textStyle="bold"
                android:textSize="9sp"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/time_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/martel"
                android:padding="3dp"
                android:textColor="@color/font_timescreening"
                android:text="12.13 am"
                android:textStyle="bold"
                android:textSize="9sp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/answer_user"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>